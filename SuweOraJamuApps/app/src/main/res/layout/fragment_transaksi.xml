<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.TransaksiFragment">

    <TextView
        android:id="@+id/textEmptyTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum Ada Transaksi"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTransaksi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />

    <TextView
        android:id="@+id/textTotalBiaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Biaya Akhir: Rp0"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
    />

    <Button
        android:id="@+id/buttonTambahTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Transaksi"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
    />

</LinearLayout>